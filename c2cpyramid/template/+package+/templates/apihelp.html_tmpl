<!DOCTYPE HTML>
<html lang="${lang}">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="Content-Language" content="${lang}" />

  <title>API Test and Doc page</title>
  <style type="text/css">
    .api {
      float: left;
      width: 400px;
      height: 600px;
      border: 4px solid #bbb;
      margin:  50px 0 0 50px;
      -moz-border-radius: 5px;
    }
    pre {
      padding: 10px !important;
      margin: 0 !important;
      border-top: 2px solid #ddd;
    }
    pre .keyword             { color: red }
    pre .string, pre .regexp { color: orange }
    pre .class, pre .special { font-weight: bold }
    pre .number              { color: blue }
    pre .comment             { color: grey }
    .doc {
        font-size: 12px;
    }
    .doc ul {
        list-style: circle;
        padding: 10px 0 10px 20px;
    }
    .doc li {
        padding-left: 3px;
    }
    .doc p {
        margin: 10px 0;
    }
  </style>
</head>
<body>
  <div class="api">
      <div id="map1"></div>
      <pre>
new Sample.Map({
    div: 'map1',
    zoom: 5,
    easting: 5,
    northing: 46,
    height: 400,
    width: 400
});
      </pre>
  </div>
  <div class="api doc">
      <p>Text explaining how to use the API.</p>
  </div>
  </div>
  <%
      _query = [('lang', lang)]
      if debug:
          _query.append(('debug', 'true'))
  %>
  <script type="text/javascript" src="${request.route_url('apiloader', _query=_query)}"></script>
  <script type="text/javascript">
      Ext.select('pre').each(function(s) {
          eval(s.dom.innerHTML);
      });
  <!-- just for code examples coloration -->
  </script>
  <script type="text/javascript" src="${request.static_url('{{package}}:static/lib/hijs.js')}"></script>
</body>
</html>
